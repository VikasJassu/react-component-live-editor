# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Database (if you want to add database support later)
# DATABASE_URL=postgresql://username:password@localhost:5432/react_live_inspector
# REDIS_URL=redis://localhost:6379

# File Storage
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_SHARING=true
ENABLE_EXPORT=true